@{
    ViewData["Title"] = "Rejestracja";
}
<div class="text-center">
	<h1 class="text-center">Rejestracja</h1>
    <br />
    <h3>@ViewData["Message"]</h3>
    <form method="post" action="/home/Register">
        <label for="login">Login:</label>
        <input type="text" name="login" class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-6" required /><br /><br />
        <label for="email">Email:</label>
        <input type="text" name="email" class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-6" required /><br /><br />
        <label for="password">Hasło:</label>
        <input type="password" name="password" class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-6" required /><br /><br />
        <label for="password2">Powtórz hasło:</label>
        <input type="password" name="password2" class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-6" required /><br /><br />
        <label for="country">Kraj:</label>
        <input type="text" name="country" class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-6" required /><br /><br />
        <label for="city">Miasto:</label>
        <input type="text" name="city" class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-6" required /><br /><br />
        <label for="street">Ulica:</label>
        <input type="text" name="street" class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-6" required /><br /><br />
        <label for="postcode">Kod pocztowy:</label>
        <input type="number" name="postcode" maxlength="5" min="10000" class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-6" required /><br /><br />
        <label for="birthday">Data urodzin:</label>
        <input type="date" name="birthday" class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-6" required /><br /><br />
        <input type="submit" class="btn btn-primary" value="Zarejestruj się" class="col-5 col-sm-5 col-md-4 col-lg-3 col-xl-3 col-xxl-3" />
        <input type="reset" class="btn btn-warning" value="Wyczyść" class="col-5 col-sm-5 col-md-4 col-lg-3 col-xl-3 col-xxl-3"  />
    </form>
</div>
