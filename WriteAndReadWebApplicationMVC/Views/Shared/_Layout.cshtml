@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WriteAndRead</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WriteAndReadWebApplicationMVC.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WriteAndRead</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-sm-between d-md-flex justify-content-md-end">
                    @{
                        if(Accessor.HttpContext.Session.GetString("_Logged") == "True")
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-center" asp-area="" asp-controller="Read" asp-action="Index">Czytaj</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-center" asp-area="" asp-controller="Write" asp-action="Index">Pisz</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-center" asp-area="" asp-controller="Profile" asp-action="Index">Profil</a>
                                </li>
                                @if(Accessor.HttpContext.Session.GetString("_IfAdmin") == "True")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark text-center" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-center" asp-area="" asp-controller="Home" asp-action="Logout">Wyloguj</a>
                                </li>
                            </ul>
                        } 
                        else
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-center" asp-area="" asp-controller="Home" asp-action="Login">Zaloguj</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-center" asp-area="" asp-controller="Home" asp-action="Register">Zarejestruj</a>
                                </li>
                            </ul>
                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container-fluid min-vh-100">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WriteAndRead - <a asp-area="" asp-controller="Home" asp-action="Privacy">Zasady Prywatności</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
