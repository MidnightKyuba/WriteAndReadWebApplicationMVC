@using Microsoft.AspNetCore.Http
@using System.Text.Json;
@inject IHttpContextAccessor Accessor
@{
	ViewData["Title"] = "Profil";
}
@{
	if (ViewData["Message"] != null)
	{
		<h2>@ViewData["Message"]</h2>
	}
	<div class="text-center">
		<div class="col-11 col-sm-11 col-md-9 col-lg-9 col-xl-9 col-xxl-9 border-1">
			<form method="post" action="/Profile/EditPassword">
				<label for="newPassword" class=" col-6 col-sm-6 col-md-2 col-lg-2 col-xl-2 col-xxl-2">Nowe hasło:</label>
				<input type="password" name="newPassword" class=" col-10 col-sm-10 col-md-8 col-lg-8 col-xl-8 col-xxl-8" required /><br />
				<label for="newPassword2" class=" col-6 col-sm-6 col-md-2 col-lg-2 col-xl-2 col-xxl-2">Powtórz nowe hasło:</label>
				<input type="password" name="newPassword2" class=" col-10 col-sm-10 col-md-8 col-lg-8 col-xl-8 col-xxl-8" required/><br />
				<label for="oldPassword" class=" col-6 col-sm-6 col-md-2 col-lg-2 col-xl-2 col-xxl-2">Stare hasło:</label>
				<input type="password" name="oldPassword" class=" col-10 col-sm-10 col-md-8 col-lg-8 col-xl-8 col-xxl-8" required /><br /><br />
				<input type="submit" class="btn btn-primary" class="col-8 col-sm-8 col-md-4 col-lg-4 col-xl-4 col-xxl-4" value="Zapisz zmiany" />
			</form>
		</div>
	</div>
}
